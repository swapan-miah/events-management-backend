{
  "name": "event-management-backend",
  "version": "1.0.0",
  "main": "server.js",
  "author": "Ismail hossen swapan",
  "license": "MIT",
  "prisma": {
    "schema": "./prisma/schema"
  },
  "scripts": {
    "postinstall": "prisma generate",
    "dev": "ts-node-dev --respawn --transpile-only ./src/server.ts",
    "build": "tsc",
    "build:fast": "node esbuild.config.js",
    "prisma:generate": "npx prisma generate",
    "migrate": "npx prisma migrate dev",
    "migrate:reset": "npx prisma migrate reset",
    "seed": "ts-node-dev ./src/app/utils/seed.ts",
    "seed:users": "ts-node-dev ./src/app/utils/seedUsers.ts",
    "seed:hosts": "ts-node-dev ./src/app/utils/seedHosts.ts",
    "seed:events": "ts-node-dev ./src/app/utils/seedEvents.ts",
    "seed:reviews": "ts-node-dev ./src/app/utils/seedReviews.ts",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "@prisma/client": "^6.16.3",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.7.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "http-status": "^2.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "pino": "^9.9.5",
    "pino-http": "^10.5.0",
    "prisma": "^6.16.3",
    "redis": "^5.9.0",
    "stripe": "^20.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.5.0",
    "@types/nodemailer": "^7.0.1",
    "@types/pino-http": "^5.8.4",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "pino-pretty": "^13.1.1",
    "cross-env": "^10.0.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.33.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  }
}
